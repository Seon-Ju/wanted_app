<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Community.DetailPostFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="공모전"
                        android:id="@+id/decategroy"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:letterSpacing="-0.05" />

                </LinearLayout>

                <TextView
                    android:layout_marginTop="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="앱 아이디어 공모전"
                    android:id="@+id/detitle"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:letterSpacing="-0.05" />

                <LinearLayout
                    android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/deimage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/profile_basic3"
                        android:layout_marginBottom="5dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                        android:id="@+id/deid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시미즈"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:letterSpacing="-0.05"/>

                     <TextView
                           android:id="@+id/dedate"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="2021.11.01"
                           android:textSize="12sp"
                           android:textColor="#878484"
                           android:letterSpacing="-0.05"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#909090"/>

<LinearLayout
    android:layout_gravity="center_horizontal"
    android:layout_width="360dp"
    android:layout_height="wrap_content">


    <TextView
      android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요 2021년 12월에 하는 앱 아이디어 공모전에 참여하실 안드로이드 개발자 구합니다. 현재 서버개발자 2명있고, 프로젝트 경험있으면 좋겠지만 없어도 같이 만들어가실 분이면 좋겠습니다!! 자세한 사항은 쪽지 부탁드립니다"
        android:textSize="15sp"
        android:textColor="#878484"
        android:letterSpacing="-0.05"/>



</LinearLayout>

                <View
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#909090"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />

            </LinearLayout>
            <Button
            android:layout_gravity="center_horizontal"
                android:id="@+id/derequest"
                android:text="참가 신청"
                style="@style/requestBtn"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
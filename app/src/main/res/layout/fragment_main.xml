<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.MainFragment">

    <!--홈탭 타이틀-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="홈"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:letterSpacing="-0.05"
        android:paddingLeft="20dp"
        android:layout_marginBottom="5dp"/>

    <!--홈탭 구분선-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/gray"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--커뮤니티-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <!--커뮤니티 타이틀-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="너, 내 동료가 돼라!"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:letterSpacing="-0.05"/>

                    <Button
                        android:id="@+id/arrow_community"
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:background="@drawable/ic_arrow"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

                <!--커뮤니티 포스팅 목록-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_board"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />

            </LinearLayout>

            <!--친구-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <!--친구 타이틀-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="우린 칭구칭긔"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:letterSpacing="-0.05"/>
                </LinearLayout>

                <!--친구 카테고리 버튼-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btn_school"
                        android:layout_height="35dp"
                        android:text="학교친구"
                        android:textSize="12dp"
                        style="@style/btnBasic"/>

                    <Button
                        android:id="@+id/btn_major"
                        android:layout_height="35dp"
                        android:text="학과친구"
                        android:textSize="12dp"
                        android:layout_marginLeft="10dp"
                        style="@style/btnBasic"/>

                    <Button
                        android:id="@+id/btn_address"
                        android:layout_height="35dp"
                        android:text="동네친구"
                        android:textSize="12dp"
                        android:layout_marginLeft="10dp"
                        style="@style/btnBasic"/>

                </LinearLayout>

                <!--친구 목록-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_friend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>

            <!--Footer-->
            <LinearLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@color/gray"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="상호명: 원티드\n대표자: 임현승\n이메일: temp@gmail.com\n카카오톡: @원티드 친구 추가하고 소식을 받아보세요"
                    android:textSize="8dp"
                    android:textColor="#ff191919"
                    android:letterSpacing="-0.02"
                    android:lineSpacingMultiplier="1.2" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Fragment.CommunityFragment">
    <!-- navigation graph fragment -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/search"
            android:text=""
            android:background="@layout/search_background_round"
            android:hint=""     />
        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/searchb"
            android:layout_marginLeft="10dp"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:text="검색" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" >

        <Button
            android:id="@+id/btnContest"
            android:text="공모전"
            style="@style/friendBtn"/>

        <Button
            android:id="@+id/btnClub"
            android:text="동아리"
            android:layout_marginLeft="10dp"
            style="@style/friendBtn"/>

        <Button
            android:id="@+id/btnOut"
            android:text="대외활동"
            android:layout_marginLeft="10dp"
            style="@style/friendBtn"/>

        <Button
            android:id="@+id/btnStudy"
            android:text="스터디"
            android:layout_marginLeft="10dp"
            style="@style/friendBtn"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_contest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:nestedScrollingEnabled="false"
        android:overScrollMode="never" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.ProfileEditFragment">

    <!--프로필 편집 타이틀-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:letterSpacing="-0.05"
        android:paddingLeft="20dp"
        android:text="프로필 편집"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!--구분선-->
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/gray" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <!--사진-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_edit_image_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
               >

                <TextView
                    android:id="@+id/profile_edit_image_title"
                    android:text="프로필 사진 *"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/registerTitle"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/profile_edit_image_title"
                    app:layout_constraintStart_toStartOf="parent">

                    <!--윗줄-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/iv1"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="80dp"
                                android:layout_weight="1"
                                android:src="@drawable/profile_basic1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/iv2"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="80dp"
                                android:layout_weight="1"
                                android:src="@drawable/profile_basic2" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/iv3"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />

                            <ImageView

                                android:layout_width="50dp"
                                android:layout_height="80dp"
                                android:layout_weight="1"
                                android:src="@drawable/profile_basic3" />
                        </LinearLayout>
                    </LinearLayout>

                    <!--아랫줄-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/iv4"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />

                            <ImageView

                                android:layout_width="50dp"
                                android:layout_height="80dp"
                                android:layout_weight="1"
                                android:src="@drawable/profile_basic4" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/iv5"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />

                            <ImageView

                                android:layout_width="50dp"
                                android:layout_height="80dp"
                                android:layout_weight="1"
                                android:src="@drawable/profile_basic5" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/iv6"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />

                            <ImageView

                                android:layout_width="50dp"
                                android:layout_height="80dp"
                                android:layout_weight="1"
                                android:src="@drawable/profile_basic6" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--학교-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_edit_school_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_image_group"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/profile_edit_school_title"
                    android:text="학교 *"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/registerTitle" />

                <EditText
                    android:id="@+id/profile_edit_school"
                    android:layout_width="0dp"
                    android:hint="학교명을 입력해주세요."
                    app:layout_constraintTop_toBottomOf="@id/profile_edit_school_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/profile_edit_school_search"
                    style="@style/registerEditText"/>

                <Button
                    android:id="@+id/profile_edit_school_search"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_search"
                    app:layout_constraintTop_toBottomOf="@id/profile_edit_school_title"
                    app:layout_constraintStart_toEndOf="@id/profile_edit_school"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--학과-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_edit_major_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_school_group"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/profile_edit_major_title"
                    android:text="학과 *"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/registerTitle" />

                <EditText
                    android:id="@+id/profile_edit_major"
                    android:layout_width="0dp"
                    android:hint="학과명을 입력해주세요."
                    app:layout_constraintTop_toBottomOf="@id/profile_edit_major_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/profile_edit_major_search"
                    style="@style/registerEditText"/>

                <Button
                    android:id="@+id/profile_edit_major_search"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_search"
                    app:layout_constraintTop_toBottomOf="@id/profile_edit_major_title"
                    app:layout_constraintStart_toEndOf="@id/profile_edit_major"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--학년-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_edit_grade_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_major_group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/profile_edit_age_group">

                <TextView
                    android:id="@+id/profile_edit_grade_title"
                    android:text="학년 *"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/registerTitle" />

                <Spinner
                    android:id="@+id/profile_edit_grade_spinner"
                    app:layout_constraintTop_toBottomOf="@id/profile_edit_grade_title"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/registerSpinner" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--나이-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_edit_age_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_major_group"
                app:layout_constraintStart_toEndOf="@id/profile_edit_grade_group"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/profile_edit_age_title"
                    android:text="나이"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/registerTitle" />

                <Spinner
                    android:id="@+id/profile_edit_age_spinner"
                    app:layout_constraintTop_toBottomOf="@id/profile_edit_age_title"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/registerSpinner" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--성별-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_edit_gender_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_grade_group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/profile_edit_address_group">

                <TextView
                    android:id="@+id/profile_edit_gender_title"
                    android:text="성별"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/registerTitle" />

                <Spinner
                    android:id="@+id/profile_edit_gender_spinner"
                    app:layout_constraintTop_toBottomOf="@id/profile_edit_gender_title"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/registerSpinner" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--지역-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_edit_address_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_age_group"
                app:layout_constraintStart_toEndOf="@id/profile_edit_gender_group"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/profile_edit_address_title"
                    android:text="지역 *"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/registerTitle" />

                <Spinner
                    android:id="@+id/profile_edit_address_spinner"
                    app:layout_constraintTop_toBottomOf="@id/profile_edit_address_title"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/registerSpinner"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

          <!--역량 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_edit_career_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_address_group">

                <TextView
                    android:id="@+id/profile_edit_career_title"
                    android:text="역량"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/registerTitle"/>

                <EditText
                    android:id="@+id/profile_edit_career_et"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_border"
                    android:gravity="top"
                    android:padding="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:letterSpacing="-0.05"
                    android:overScrollMode="always"
                    android:scrollbars="vertical"
                    android:scrollbarStyle="insideInset"
                    app:layout_constraintTop_toBottomOf="@id/profile_edit_career_title"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--등록버튼-->
            <Button
                android:id="@+id/profile_edit_done"
                style="@style/btnBasic"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_teal"
                android:text="수정완료"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/profile_edit_career_group"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>